@model IEnumerable<SepApplication02.Models.Member>

@{
    ViewBag.Title = "Index";
    var db = ViewBag.DB as SepApplication02.Models.sepoopcsEntities;
}

<h2>Members</h2>

<p>
    @Html.ActionLink("Create New", "Create", new {courseId = ViewBag.CourseId})
</p>
<table class="table">
    <tr>
        <th>
            Code
        </th>
        <th>
            FullName
        </th>
        <th>
            BirthDay
        </th>
        <th>
            Code
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fullname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Code)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>

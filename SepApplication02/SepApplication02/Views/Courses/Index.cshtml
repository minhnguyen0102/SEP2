@model IEnumerable<SepApplication02.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Courses List</h2>

<p>
    @Html.ActionLink("Create New Courses", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Info)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lecturer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Info)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lecturer)
        </td>
        <td>
            @Html.ActionLink("Check", "Index", "Attendance", new { id = item.id } == null) |
@Html.ActionLink("Details", "Index", "Members", new { courseId = item.id }, null) |
@Html.ActionLink("Sessions", "Index", "Sessions", new { courseId = item.id }, null)
        </td>
    </tr>
}

</table>
